    function prepare_cat_data(obj, avg, sd) {
        var d = [];
        let interval_size = 2000;
        var keys = {};
        var keys_arr = [];
        let min = avg - 3 * sd;
        let max = avg + 3 * sd;

        $.each(obj, function(key, value) {
