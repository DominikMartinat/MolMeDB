            if (iv < interval_size) {
                interval_size = iv;
            }

            keys[parseFloat(vals[0])] = key;
            keys_arr.push(parseFloat(vals[0]));
        });

        keys_arr.sort(function(a,b){return a < b ? -1 : 1});

        interval_size = parseFloat(interval_size);
        let total_bins = keys_arr.length;
        let i = 0;
        let step_bin = (max-min)/total_bins;

        keys_arr.forEach((k) => {
